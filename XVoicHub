miniBtn.Parent = gui
miniBtn.Size = UDim2.new(0, 90, 0, 28)
miniBtn.Position = UDim2.new(0, 12, 0, 12)
miniBtn.Text = "XVoic Hub"
miniBtn.BackgroundColor3 = Color3.fromRGB(45, 50, 70)
miniBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
